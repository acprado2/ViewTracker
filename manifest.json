{
  "manifest_version": 2,
  
  "name": "View Tracker",
  "version": "1.01",
  "description": "Simple extension for tracking how often you've watched a video",

  "icons": {
    "48": "icons/vt-48.png"
  },
  
  "browser_action": {
        "default_title": "View Tracker",
        "default_icon": {
          "48":"icons/vt-48.png",
          "96":"icons/vt-96.png"
        },  
    "default_popup": "info.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["tracker.js"]
    }
  ],
  
  "permissions": [
  "tabs",
  "storage",
  "unlimitedStorage"
  ]
}